{
	"name": "verdant",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
		"prepare": "husky",
		"test": "turbo run test"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.2",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"turbo": "^2.7.2"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "npm@11.7.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
